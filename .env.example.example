# VIBE Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Execution Configuration
MAX_RETRIES=3
TASK_TIMEOUT=600
PARALLEL_TASKS=4

# Claude CLI Configuration
# Skip permission checks for automated execution (default: true)
CLAUDE_CLI_SKIP_PERMISSIONS=true
# Custom path to Claude CLI if not in PATH (optional)
# CLAUDE_CLI_PATH=/path/to/claude

# Docker Configuration
DOCKER_IMAGE_NAME=vibe-sandbox
DOCKER_CONTAINER_PREFIX=vibe-task-

# Logging
LOG_LEVEL=INFO
LOG_FILE=vibe.log